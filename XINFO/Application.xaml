        <Style
            x:Key="{x:Type DocumentViewer}"
            TargetType="{x:Type DocumentViewer}">
            <Setter Property="Background" Value="{DynamicResource {x:Static SystemColors.ControlBrushKey}}" />
            <Setter Property="FocusVisualStyle" Value="{x:Null}" />
            <Setter Property="Foreground" Value="{DynamicResource {x:Static SystemColors.WindowTextBrushKey}}" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type DocumentViewer}">
                        <Border
                            BorderBrush="{TemplateBinding BorderBrush}"
                            BorderThickness="{TemplateBinding BorderThickness}"
                            Focusable="False">
                            <Grid KeyboardNavigation.TabNavigation="Local">
                                <Grid.Background>
                                    <SolidColorBrush Color="{DynamicResource ControlLightColor}" />
                                </Grid.Background>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="*" />
                                    <RowDefinition Height="Auto" />
                                </Grid.RowDefinitions>
                                <ToolBar
                                    KeyboardNavigation.TabNavigation="Continue"
                                    ToolBarTray.IsLocked="True">

                                    <Button
                                        Margin="10,0,10,0"
                                        Command="ApplicationCommands.Print"
                                        CommandTarget="{Binding RelativeSource={RelativeSource TemplatedParent}}"
                                        Content="{x:Static p:Resources.XINFO_Style_DocViewer_001}" />
                                    <Button
                                        Command="ApplicationCommands.Copy"
                                        CommandTarget="{Binding RelativeSource={RelativeSource TemplatedParent}}"
                                        Content="{x:Static p:Resources.XINFO_Style_DocViewer_002}"
                                        Visibility="Collapsed" />
                                    <Separator />
                                    <Button
                                        Margin="10,0,10,0"
                                        Command="NavigationCommands.IncreaseZoom"
                                        CommandTarget="{Binding RelativeSource={RelativeSource TemplatedParent}}"
                                        Content="{x:Static p:Resources.XINFO_Style_DocViewer_003}" />
                                    <Button
                                        Margin="10,0,10,0"
                                        Command="NavigationCommands.DecreaseZoom"
                                        CommandTarget="{Binding RelativeSource={RelativeSource TemplatedParent}}"
                                        Content="{x:Static p:Resources.XINFO_Style_DocViewer_004}" />
                                    <Separator />
                                    <Button
                                        Margin="10,0,10,0"
                                        Command="NavigationCommands.Zoom"
                                        CommandParameter="100.0"
                                        CommandTarget="{Binding RelativeSource={RelativeSource TemplatedParent}}"
                                        Content="{x:Static p:Resources.XINFO_Style_DocViewer_005}" />
                                    <Button
                                        Margin="10,0,10,0"
                                        Command="DocumentViewer.FitToWidthCommand"
                                        CommandTarget="{Binding RelativeSource={RelativeSource TemplatedParent}}"
                                        Content="{x:Static p:Resources.XINFO_Style_DocViewer_006}" />
                                    <Button
                                        Margin="10,0,10,0"
                                        Command="DocumentViewer.FitToMaxPagesAcrossCommand"
                                        CommandParameter="1"
                                        CommandTarget="{Binding RelativeSource={RelativeSource TemplatedParent}}"
                                        Content="{x:Static p:Resources.XINFO_Style_DocViewer_007}" />
                                    <Button
                                        Margin="10,0,10,0"
                                        Command="DocumentViewer.FitToMaxPagesAcrossCommand"
                                        CommandParameter="2"
                                        CommandTarget="{Binding RelativeSource={RelativeSource TemplatedParent}}"
                                        Content="{x:Static p:Resources.XINFO_Style_DocViewer_008}" />
                                </ToolBar>
                                <ScrollViewer
                                    x:Name="PART_ContentHost"
                                    Grid.Row="1"
                                    HorizontalAlignment="Right"
                                    CanContentScroll="true"
                                    HorizontalScrollBarVisibility="Auto"
                                    IsTabStop="true">
                                    <ScrollViewer.Resources>
                                        <clr:Double x:Key="{x:Static SystemParameters.VerticalScrollBarWidthKey}">30</clr:Double>
                                        <clr:Double x:Key="{x:Static SystemParameters.HorizontalScrollBarHeightKey}">30</clr:Double>
                                    </ScrollViewer.Resources>
                                    <ScrollViewer.Background>
                                        <LinearGradientBrush StartPoint="0.5,0" EndPoint="0.5,1">
                                            <GradientStop Offset="0" Color="{StaticResource Xstrahl_Purple020}" />
                                            <GradientStop Offset="1" Color="{StaticResource Xstrahl_Purple100}" />
                                        </LinearGradientBrush>
                                    </ScrollViewer.Background>
                                </ScrollViewer>
                                <ContentControl
                                    x:Name="PART_FindToolBarHost"
                                    Grid.Row="2" />
                            </Grid>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>

